{% extends 'base.html.twig' %}

{% block body %}
    <h1>Plant</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ plant.name }}</td>
            </tr>
            <tr>
                <th>Soil</th>
                <td>{{ plant.soil }}</td>
            </tr>
            <tr>
                <th>Seedsquantity</th>
                <td>{{ plant.seedsQuantity }}</td>
            </tr>
            <tr>
                <th>Seedsquantityunit</th>
                <td>{{ plant.seedsQuantityUnit }}</td>
            </tr>
            <tr>
                <th>Seedingdepth</th>
                <td>{{ plant.seedingDepth }}</td>
            </tr>
            <tr>
                <th>Linedistance</th>
                <td>{{ plant.lineDistance }}</td>
            </tr>
            <tr>
                <th>Lineinterval</th>
                <td>{{ plant.lineInterval }}</td>
            </tr>
            <tr>
                <th>Watering</th>
                <td>{{ plant.watering }}</td>
            </tr>
            <tr>
                <th>Undercoverstart</th>
                <td>{{ plant.underCoverStart }}</td>
            </tr>
            <tr>
                <th>Undercoverend</th>
                <td>{{ plant.underCoverEnd }}</td>
            </tr>
            <tr>
                <th>Ingroundstart</th>
                <td>{{ plant.inGroundStart }}</td>
            </tr>
            <tr>
                <th>Ingroundend</th>
                <td>{{ plant.inGroundEnd }}</td>
            </tr>
            <tr>
                <th>Plantingstart</th>
                <td>{{ plant.plantingStart }}</td>
            </tr>
            <tr>
                <th>Plantingend</th>
                <td>{{ plant.plantingEnd }}</td>
            </tr>
            <tr>
                <th>Harverststart</th>
                <td>{{ plant.harverstStart }}</td>
            </tr>
            <tr>
                <th>Harvestend</th>
                <td>{{ plant.harvestEnd }}</td>
            </tr>
            <tr>
                <th>Friendlyplants</th>
                <td>{{ plant.friendlyPlants }}</td>
            </tr>
            <tr>
                <th>Enemyplants</th>
                <td>{{ plant.enemyPlants }}</td>
            </tr>
            <tr>
                <th>Tips</th>
                <td>{{ plant.tips }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_plant_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_plant_edit', { 'id': plant.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
