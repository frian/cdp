{% extends 'base.html.twig' %}

{% block body %}
    <h1>Plant</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ plant.name }}</td>
            </tr>
            <tr>
                <th>Soil</th>
                <td>
                    {% for soil in plant.soil %}
                        {{ soil }}
                        {% if not loop.last %}
                            ,
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Seedsquantity</th>
                <td>{{ plant.seedsQuantity }} {{ plant.seedsQuantityUnit }}</td>
            </tr>
            <tr>
                <th>Seedingdepth</th>
                <td>{{ plant.seedingDepth }} cm</td>
            </tr>
            <tr>
                <th>Linedistance</th>
                <td>{{ plant.lineDistance }} cm</td>
            </tr>
            <tr>
                <th>Lineinterval</th>
                <td>{{ plant.lineInterval }} cm</td>
            </tr>
            <tr>
                <th>Watering</th>
                <td>{{ plant.watering }}</td>
            </tr>
            <tr>
                <th>Undercoverstart</th>
                <td>
                    {{ date('2000-' ~ plant.underCoverStart ~ '-1')|date("M") }} -
                    {{ date('2000-' ~ plant.underCoverEnd ~ '-1')|date("M") }}
                </td>
            </tr>
            <tr>
                <th>Ingroundstart</th>
                <td>
                    {{ date('2000-' ~ plant.inGroundStart ~ '-1')|date("M") }} -
                    {{ date('2000-' ~ plant.inGroundEnd ~ '-1')|date("M") }}
                </td>
            </tr>
            <tr>
                <th>Plantingstart</th>
                <td>
                    {{ date('2000-' ~ plant.plantingStart ~ '-1')|date("M") }} -
                    {{ date('2000-' ~ plant.plantingEnd ~ '-1')|date("M") }}
                </td>
            </tr>
            <tr>
                <th>Harverststart</th>
                <td>
                    {{ date('2000-' ~ plant.harverstStart ~ '-1')|date("M") }} -
                    {{ date('2000-' ~ plant.harvestEnd ~ '-1')|date("M") }}
                </td>
            </tr>
            <tr>
                <th>Friendlyplants</th>
                <td>
                    {% for plant in plant.friendlyPlants %}
                        {{ plant }}
                        {% if not loop.last %}
                            ,
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Enemyplants</th>
                <td>
                    {% for plant in plant.enemyPlants %}
                        {{ plant }}
                        {% if not loop.last %}
                            ,
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Tips</th>
                <td>{{ plant.tips }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_plant_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_plant_edit', { 'id': plant.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
